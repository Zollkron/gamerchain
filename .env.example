# PlayerGold Environment Configuration
# Copy this file to .env and modify as needed

# Environment
ENVIRONMENT=development
DEBUG=true

# Network Configuration
NETWORK__P2P_PORT=8333
NETWORK__API_PORT=8080
NETWORK__MAX_PEERS=50
NETWORK__NETWORK_ID=playergold-testnet

# AI Configuration
AI__MODELS_DIR=./models
AI__CHALLENGE_TIMEOUT=0.1
AI__MIN_VALIDATORS=3

# Blockchain Configuration
BLOCKCHAIN__DATA_DIR=./data
BLOCKCHAIN__BLOCK_TIME=10
BLOCKCHAIN__MAX_BLOCK_SIZE=1048576

# Wallet Configuration
WALLET__WALLET_DIR=./wallets
WALLET__ENABLE_2FA=true
WALLET__AUTO_BACKUP=true

# Logging Configuration
LOGGING__LOG_LEVEL=INFO
LOGGING__LOG_FILE=./logs/playergold.log